{
	"name": "api_template_cleanarch",
	"version": "1.0.0",
	"description": "API template for NodeJS using Clean Architecture",
	"main": "src/main/server.ts",
	"author": "Artur Donda",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"test-clear-cache": "jest --clearCache",
		"dev": "nodemon src/main/server.ts",
		"build": "rimraf ./build && tsc",
		"start": "node build/src/main/server.js"
	},
	"_moduleAliases": {
		"@application": "build/src/application",
		"@domain": "build/src/domain",
		"@infra": "build/src/infra",
		"@presentation": "build/src/presentation",
		"@main": "build/src/main",
		"@root": "./"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"ipdata": "^2.2.0",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.2",
		"mongoose": "^6.2.8",
		"nodemailer": "^6.7.3"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^17.0.21",
		"@types/nodemailer": "^6.4.4",
		"jest": "^27.5.1",
		"nodemon": "^2.0.15",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.2"
	}
}
