{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "build",
		"rootDir": "./",
		"baseUrl": "src",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"typeRoots": ["@types", "./node_modules/@types"],
		"paths": {
			"@domain/*": ["domain/*"],
			"@application/*": ["application/*"],
			"@infra/*": ["infra/*"],
			"@presentation/*": ["presentation/*"],
			"@main/*": ["main/*"],
			"@root/*": ["../*"]
		}
	}
}
